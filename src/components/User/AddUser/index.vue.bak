<script>
import { string } from 'jszip/lib/support'
import { saveEmployee } from '@/api/employee'
export default {
  name: 'AddUser',
  props: {
    titles: {
      type: string,
      default: ''
    }
  },
  data() {
    return {
      dialogVisible: false,
      title: this.titles,
      empForm: {
        empNo: '  l8',
        empName: '小兰',
        age: '12',
        identityCard: '2252345235235',
        liveAddress: '时间思考思考',
        familyAddress: '人员还挺好听',
        phone: '123455555',
        email: '1233455@qq.com'
      }
    }
  },
  watch: {
    titles() {
      debugger
      this.dialogVisible = true
    }
  },
  methods: {
    ok() {
      debugger
      this.save()
      this.dialogVisible = false
    },
    cancel() {
      debugger
      this.$confirm('确认取消？')
        .then(_ => {
          this.dialogVisible = false
        })
        .catch(_ => {})
    },
    handleClose(done) {
      debugger
      this.$confirm('确认关闭？')
        .then(_ => {
          this.dialogVisible = false
        })
        .catch(_ => {})
    },
    save() {
      saveEmployee(this.empForm).then(response => {
        if (response.success) {
          this.$notify({
            title: '成功',
            message: '保存成功',
            type: 'success'
          })
        } else {
          this.$notify.error({
            title: '错误',
            message: response.message
          })
        }       
      })
    }
  }
}
</script>
